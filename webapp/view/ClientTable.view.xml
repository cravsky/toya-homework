<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="sap.ui.demo.toya.controller.ClientTable">
    <Page title="Klienci">
        <Table id="idCustomersTable" items="{/Customers}">
            <columns>
                <!-- Sortable Company Name column -->
                <Column hAlign="Left">
                    <header>
                        <HBox alignItems="Center">
                            <Label text="Nazwa firmy" />
                            <Button icon="sap-icon://sort" press="onSortCompanyName" type="Transparent"/>
                        </HBox>
                    </header>
                </Column>
                <Column>
                    <Text text="Adres" />
                </Column>
                <Column>
                    <header>
                        <HBox alignItems="Center">
                            <Label text="Miasto" />
                            <Button icon="sap-icon://filter" type="Transparent" press="onFilterCityColumn" />
                        </HBox>
                    </header>
                </Column>
                <Column>
                    <Text text="Kod pocztowy" />
                </Column>
                <Column>
                    <Text text="Numer telefonu" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{CompanyName}" />
                        <!-- Nazwa firmy -->
                        <Text text="{Address}" />
                        <!-- Adres -->
                        <Text text="{City}" />
                        <!-- Miasto -->
                        <Text text="{PostalCode}" />
                        <!-- Kod pocztowy -->
                        <Text text="{Phone}" />
                        <!-- Numer telefonu -->
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>